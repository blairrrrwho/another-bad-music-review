<div class='card mb-6'>
  <header class="card-header card-header-title has-background-grey-lighter">
    <div class="column">
      <h3>
        {{title}}
      </h3>
    </div>

    <div class="column">
      <span class=""> </span>
    </div>
  </header>

  <div class="card-content"> <br>
    <h5>Artist/Album/Track:</h5>
      <p>{{artist}}</p> 
      <p>{{album}}</p> 
      <p>{{song}}</p>
  </div>
  <div class="text-center">
    <p>{{description}}</p> <br><br>
  </div>

  <p>Created by <a href="/user/{{id}}">{{user.name}}</a> on {{format_date date_created}}</p><br>
  <div class="is-pulled-right" data-lyket-type='updown' data-lyket-id='my-first-post'></div>

</div>


<div class='text-center'>
  <h1>{{title}}</h1>
  <br /><br /><br />
  <h5>Artist | Album | Track </h5>
  <h3>
    {{post.artist}}
    {{album}}
    {{song}}

  </h3>

  <h3>{{description}}</h3><br /><br /><br />
  <h5>Created by
    {{user.name}}
    on
    {{format_date date_created}}
    <br /><br />
    <div data-lyket-type='updown' data-lyket-id='my-first-post'></div>
  </h5>

</div>

<br />
{{#each com as |comment|}}
<h6>Comments:</h6>
"{{comment.comment_body}}" -- posted by username
{{/each}}
on
{{format_date date_created}}
<br />

{{#if logged_in}}
<br /><br /><br>
<form class='form new-comment-form'>
  <div class='comment-group'>
    <label for='comment-name'>How bad is my music taste?</label>
    <input class='form-input' placeholder='Comment..' type='text' id='comment-name' name='comment-name' />
  </div>
  <div class='form-group'>
    <button type='submit' class='btn btn-primary' id='comment'>Post Comment</button>
  </div>
</form>

{{else}}
<p>Have comments?</p>
<a href='/login'> Login first, goofball.</a>
{{/if}}

<script src='https://unpkg.com/@lyket/widget@latest/dist/lyket.js?apiKey=pt_f4fc27bfe559f3d29b01bbf674da0f'></script>

</div>